{
	"$schema": "https://schemas.wp.org/trunk/block.json",
	"apiVersion": 2,
	"name": "themehunk/product-slider-one",
	"version": "0.1.0",
	"title": "Product Slider One",
	"category": "text",
	"icon": "smiley",
	"description": " campo Example block written with ESNext standard and JSX support â€“ build step required.",
	"usesContext": [ "themehunk/recordId" ],
	"supports": {
		"html": true
	},
	"attributes": {
		"orderBy": {
            "type": "string",
            "default": "date"
        },
		"border": {
            "type": "string",
            "default": ""
        },
		"alignment": {
            "type": "string",
            "default": "none"
        },
		"columns": {
			"type": "number",
			"default": 3
		},
		"rows": {
			"type": "number",
			"default": 2
		},
		"totalCount": { 
			"type": "number",
			"default": 0
		},
		"bg_color": { 
			"type": "string", 
			"default": "#F4F4F4" 
		},
		"title_color": { 
			"type": "string", 
			"default": "#3F3F3F" 
		},
		"btnText_color": { 
			"type": "string", 
			"default": "#FFFFFF" 
		},
		"btnBg_color": { 
			"type": "string", 
			"default": "#ffb006" 
		},
		"priceText_color": { 
			"type": "string", 
			"default": "#282828" 
		},
		"priceCross_color": { 
			"type": "string", 
			"default": "#E30C0C" 
		},
		"style": { 
			"type": "object", 
			"default": {
				"background":"#F4F4F4",
				"title":"#3F3F3F",
				"btnTxt":"#FFFFFF",
				"btnBackground":"#ffb006",
				"pricing":"#282828",
				"cross":"#E30C0C",
				"border":{
					"top":  {
						"color":"#72aee6",
						"style": "solid",
						"width": "1px"
					},
					"right":  {
						"color":"#72aee6",
						"style": "solid",
						"width": "1px"
					},
					"bottom":  {
						"color":"#72aee6",
						"style": "solid",
						"width": "1px"
					},
					"left":  {
						"color":"#72aee6",
						"style": "solid",
						"width": "1px"
					}
				}
			  }
		}
	},

	"textdomain": "guten-blocks-compo",
	"editorScript": "file:./index.js",
	"viewScript": "file:./view.js",
	"editorStyle": "file:./index.css",
	"style": "file:./style-index.css"
}
